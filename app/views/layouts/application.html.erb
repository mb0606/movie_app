<!DOCTYPE html>
<html>
<head>
  <title>MovieReview</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">



	<% flash.each do |name, msg| %>
		<% if flash[:notice]%>
			<%= content_tag(:div, msg, class: "alert bg-success") %>
		<% elsif flash[:alert]%>
			<%= content_tag(:div, msg, class: "alert bg-warning") %>
		<% elsif flash[:error]%>
			<%= content_tag(:div, msg, class: "alert bg-danger") %>
		<%end%>	
		
	<%end%>

<%= yield %>



</div>
      <%= debug(params)  if Rails.env.development? %>
      <%= debug(current_user) if Rails.env.development? %>
      <%= debug(@avg_review) if Rails.env.development? %>
      <%= debug(request) if Rails.env.development? %>
</body>
</html>
